= link_to 'New account', new_account_path, :class => 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th Account name
      %th Balance
      %th
  %tbody
    - for account in @accounts
      %tr
        %td= link_to account.name, account_path(account)
        %td
        %td
          = link_to 'Delete', account_path(account), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger'
