%h3= I18n.t 'views.accounts.add_schedule'
= form_for @new_schedule, :url => create_schedule_account_path(@account) do |f|
  .form-group
    = f.label :name
    = f.text_field :name, :class => 'form-control'
  .row
    .col-sm-3
      .form-group
        = f.label :starting_at
        = f.text_field :starting_at, :class => 'form-control datepicker'
    .col-sm-3
      .form-group
        = f.label :frequency
        = f.select :frequency, {'monthly' => 'monthly'}, {}, :class => 'form-control'

    .col-sm-3
      .row
        .col-sm-6
          .form-group
            = f.label :income
            = f.text_field :income, :class => 'form-control'
        .col-sm-6
          .form-group
            %label &nbsp;
            = f.select :income_currency, {'PLN' => 'PLN', 'EUR' => 'EUR', 'USD' => 'USD'}, {selected: current_user.settings(:transactions).currency}, :class => 'form-control'
    .col-sm-3
      .row
        .col-sm-6
          .form-group
            = f.label :outcome
            = f.text_field :outcome, :class => 'form-control'
        .col-sm-6
          .form-group
            %label &nbsp;
            = f.select :outcome_currency, {'PLN' => 'PLN', 'EUR' => 'EUR', 'USD' => 'USD'}, {selected: current_user.settings(:transactions).currency}, :class => 'form-control'
  .form-group
    = f.submit I18n.t('buttons.add'), :class => 'btn btn-primary'