#chart{:style => 'width: 100%; height: 400px; margin-top: 40px'}
:javascript
  var data = [];
- for event in @account.history_until(@period.end_of_month)
  :javascript
    data.push([Date.UTC(#{event[:date].year}, #{event[:date].month}, #{event[:date].day}), #{event[:balance]}]);
:javascript
  $('#chart').highcharts({
      chart: {
        type: 'area',
      },
      title: {
        text: null
      },
      yAxis: {
          plotLines: [{
              value: 0,
              width: 1,
              color: '#808080'
          }],
          title: {
              text: null
          },
      },
      tooltip: {
          valueSuffix: 'PLN'
      },
      series: [{
          name: 'Balance',
          data: data,
          color: '#139fc7',
          negativeColor: '#f63c63',
          animation: false
      }],
      xAxis: {
          type: 'datetime',
          title: {
              text: null
          },
      },
  });