
= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-signin'}) do |f|
  %h2= I18n.t 'views.sign_in.sign_up'
  = devise_error_messages!
  = f.email_field :email, autofocus: true, :class => 'form-control first', :placeholder => I18n.t('activerecord.attributes.user.email')
  = f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => I18n.t('activerecord.attributes.user.password')
  = f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control last', :placeholder => I18n.t('activerecord.attributes.user.password_confirmation')
  %button.btn.btn-lg.btn-primary.btn-block{type: "submit"}= I18n.t 'views.sign_in.sign_up'
  %br
  = render "devise/shared/links"
