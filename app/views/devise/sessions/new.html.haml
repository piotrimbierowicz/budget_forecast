= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-signin'}) do |f|
  %h2.form-signin-heading= I18n.t('views.sign_in.sign_in')
  = f.email_field :email, autofocus: true, :class => 'form-control first', :placeholder => I18n.t('activerecord.attributes.user.email')
  = f.password_field :password, :class => 'form-control last', :placeholder => I18n.t('activerecord.attributes.user.password')
  - if devise_mapping.rememberable?
    .checkbox
      = f.check_box :remember_me
      = f.label I18n.t('views.sign_in.remember_me')
    %button.btn.btn-lg.btn-primary.btn-block{type: "submit"}= I18n.t 'buttons.sign_in'
  %br
  = render "devise/shared/links"
